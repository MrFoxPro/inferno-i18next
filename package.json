{
  "name": "inferno-i18next",
  "description": "A translation utility for Inferno components using the i18next ecosystem.",
  "version": "1.0.0",
  "keywords": [
    "i18n",
    "l10n",
    "internationalization",
    "localization",
    "translation",
    "inferno",
    "i18next"
  ],
  "license": "MIT",
  "author": "Midnite Ninja Innovations",
  "homepage": "https://bitbucket.org/midniteninja/inferno-i18next",
  "repository": "bitbucket:midniteninja/inferno-i18next",
  "bugs": {
    "url": "https://bitbucket.org/midniteninja/inferno-i18next/issues"
  },
  "main": "dist/bundle.js",
  "browser": "dist/bundle.js",
  "jsnext:main": "src/index.js",
  "module": "src/index.js",
  "dependencies": {
    "inferno-component": "^3.9.0",
    "inferno-create-class": "^3.9.0",
    "inferno-shared": "^3.9.0"
  },
  "devDependencies": {
    "babel-jest": "^21.2.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "codecov": "^2.3.0",
    "cross-env": "^5.0.5",
    "eslint": "^4.8.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-inferno": "^7.0.1",
    "jest": "^21.2.1",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1"
  },
  "peerDependencies": {
    "i18next": "^9.0.1",
    "inferno": "^3.9.0"
  },
  "scripts": {
    "build": "rollup -c",
    "build-all": "npm run build-dev && npm run build-prod",
    "build-dev": "cross-env NODE_ENV=development npm run build",
    "build-prod": "cross-env NODE_ENV=production npm run build",
    "test": "eslint src && jest",
    "upload-cov": "codecov"
  }
}
