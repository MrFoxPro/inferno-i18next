{
	"name": "inferno-i18next",
	"description": "A translation utility for Inferno components using the i18next ecosystem.",
	"version": "1.0.1",
	"keywords": [
		"i18n",
		"l10n",
		"internationalization",
		"localization",
		"translation",
		"inferno",
		"i18next"
	],
	"license": "MIT",
	"main": "dist/bundle.js",
	"browser": "dist/bundle.js",
	"jsnext:main": "src/index.js",
	"devDependencies": {
		"babel-eslint": "^8.2.2",
		"babel-jest": "^22.4.3",
		"babel-plugin-external-helpers": "^6.22.0",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-plugin-inferno": "^5.0.1",
		"babel-preset-env": "^1.6.1",
		"codecov": "^3.0.0",
		"cross-env": "^5.1.4",
		"eslint": "^4.19.1",
		"eslint-plugin-import": "^2.10.0",
		"eslint-plugin-inferno": "^7.7.0",
		"i18next": "^10.6.0",
		"jest": "^22.4.3",
		"rollup": "^0.57.1",
		"rollup-plugin-babel": "^3.0.3",
		"rollup-plugin-uglify": "^3.0.0"
	},
	"dependencies": {
		"inferno": "^5.0.1",
		"inferno-clone-vnode": "^5.0.1",
		"inferno-create-element": "^5.0.1",
		"inferno-shared": "^5.0.1",
		"inferno-vnode-flags": "^5.0.1",
		"html-parse-stringify2": "^2.0.1"
	},
	"scripts": {
		"build": "rollup -c",
		"build-all": "npm run build-dev && npm run build-prod",
		"build-dev": "cross-env NODE_ENV=development npm run build",
		"build-prod": "cross-env NODE_ENV=production npm run build",
		"test": "eslint src && jest",
		"upload-cov": "codecov"
	}
}
